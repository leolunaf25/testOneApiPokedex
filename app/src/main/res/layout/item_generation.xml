<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnGeneration"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="22dp"
    android:layout_marginVertical="8dp"
    android:backgroundTint="@color/transparent_Background"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/white"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvGeneration"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:text="Generation" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivR1"
                style="@style/GenerationImageViewStyle"
                android:contentDescription="@string/descriptionImageOne" />

            <ImageView
                android:id="@+id/ivR2"
                style="@style/GenerationImageViewStyle"
                android:contentDescription="@string/descriptionImageTwo" />

            <ImageView
                android:id="@+id/ivR3"
                style="@style/GenerationImageViewStyle"
                android:contentDescription="@string/descriptionImageThree" />

        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>